{
    "name": "json-compact-prettifier",
    "displayName": "json-compact-prettifier",
    "description": "Prettify JSON Without Wasting Space",
    "version": "1.1.0",
    "publisher": "inadarei",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "img/json-icon.png",
    "galleryBanner": {
        "color": "#EFF1F3",
        "theme": "light"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/inadarei/json-compact-formatter"
    },
    "activationEvents": [
        "onCommand:extension.prettyFormatCompact"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.prettyFormatCompact",
                "title": "Format: Compact Pretty JSON"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^8.0.0",
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.2.2"
    },
    "dependencies": {
        "json-stringify-pretty-compact": "3.0.0",
        "jsonlint": "^1.6.3"
    }
}
